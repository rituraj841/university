<!DOCTYPE html>
<html lang="en">
<head>
{{>head}}
	<title>University Result - Quiz Form</title>
</head>

<body>

{{>menu}}

	<header id="head" class="secondary"></header>

	<!-- container -->
	<div class="container">
		<ol class="breadcrumb">
			<li><a href="index/">Home</a></li>
			<li class="active">Quiz Form</li>
		</ol>

		<div class="row">
			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<h1 class="page-title">Quiz Form</h1>
				</header>

				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Enter Quiz Questions</h3>
							<hr>

							<form method="post" action="/quizQuestionEntrySubmit">
                <h5><code>{{errorMessage}}</code></h5>
                <h5>{{answerMessage}}</h5>
                <div class="top-margin">
									<label>Question Number<span class="text-danger">*</span></label>
									<input type="text" name="questionnumber" class="form-control">
								</div>
								<div class="top-margin">
									<label>Question Statement <span class="text-danger">*</span></label>
									<input type="text" name="statement" class="form-control">
								</div>

								<div class="row top-margin">
                  <div class="col-sm-6">
										<label>Option 1 <span class="text-danger">*</span></label>
										<input type="text" name="option1" class="form-control">
									</div>

                  <div class="col-sm-6">
										<label>Option 2 <span class="text-danger">*</span></label>
										<input type="text" name="option2" class="form-control">
									</div>

                  <div class="col-sm-6">
										<label>Option 3 <span class="text-danger">*</span></label>
										<input type="text" name="option3" class="form-control">
									</div>
									<div class="col-sm-6">
										<label>Option 4 <span class="text-danger">*</span></label>
										<input type="text" name="option4" class="form-control">
									</div>
                  <div class="col-sm-6">
                    <label>Correct Answer <span class="text-danger">*</span></label>
                    <input type="text" name="answer" class="form-control">
                  </div>

								</div>

								<hr>

								<div class="row">
										<div class="col-lg-4 text-right">
										<button class="btn btn-action" type="submit">Submit</button>
									</div>
								</div>
							</form>
						</div>
					</div>

				</div>

			</article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->
	{{>footer}}
	{{>jsIncludes}}
</body>
</html>
