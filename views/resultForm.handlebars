<!DOCTYPE html>
<html lang="en">
<head>
{{>head}}
	<title>University Result</title>
</head>

<body>

{{>menu}}
	<header id="head" class="secondary"></header>

	<!-- container -->
	<div class="container">
		<ol class="breadcrumb">
			<li><a href="/index">Home</a></li>
			<li class="active">Get Scorecard</li>
		</ol>


	<div class="row">

			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<h1 class="page-title">Scorecard</h1>
				</header>

				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Student Scorecard</h3>

							<form method="post" action="/result-submit">
              {{#if IS_ADMIN }}
								<div class="top-margin">
                  <label>Your Roll number <span class="text-danger">*</span></label>
									<input type="text"  name="roll" class="form-control">
								</div>
              {{else}}
                <div class="top-margin">
                  <label>Your Roll number <span class="text-danger">*</span></label>
                  <input type="text"  name="roll"
                  readonly value={{USER_ROLL}} class="form-control">
                </div>


              {{/if}}
              	<hr>
              <div class="row">
                <div class="col-lg-4 text-right">
                  <button class="btn btn-action" type="submit">Submit</button>
                </div>
              </div>
							</form>
						</div>
					</div>

				</div>

			</article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->

  <footer id="footer" class="top-space">

{{>footer}}
{{>jsIncludes}}
</body>
</html>
